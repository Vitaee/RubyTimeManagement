%div.container
  %h4= "Your Time Record" 
  %p 
    Time Passed: 
    #{ time_ago_in_words(@timerecord.start_date) }
  %table.table
    %tbody
      %tr
        %td Start Date
        %td End Date
        %td Comment
        %td Type
        %td Actions
      %tr
        %td= @timerecord.start_date.strftime('%Y-%m-%d %H:%M:%S')
        %td= "Not yet!"
        %td= @timerecord.comment
        %td= @timerecord.time_type
        %td= button_to "Delete", {:controller => :home, :action => "destroy", :id => @timerecord.id}, :method => :delete,  class: 'btn btn-danger' 

  %br
  %h4= button_to "Click to Finish", {:controller => "home",  :action => "update", :id => @timerecord.id}, :method => :put, class: 'btn btn-info'
  %h4= link_to "Go back", :back

  = button_to "Logout", { action: "destroy", controller: "sessions"}, { class: 'btn btn-danger' }

